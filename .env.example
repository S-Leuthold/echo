# Echo Environment Configuration
# Copy this file to .env and add your actual values

# ================================================================
# CORE API CONFIGURATION
# ================================================================

# API Server Configuration
API_HOST=0.0.0.0                          # API server host (0.0.0.0 for production, 127.0.0.1 for local)
API_PORT=8000                             # API server port
API_URL=http://localhost:8000             # Full API URL for frontend integration
FRONTEND_URL=http://localhost:3000        # Frontend URL for CORS configuration

# Application Environment
ECHO_ENV=development                      # Environment: development, staging, production
ECHO_DEBUG=true                          # Enable debug logging (set to false in production)
ECHO_LOG_LEVEL=INFO                      # Logging level: DEBUG, INFO, WARNING, ERROR

# ================================================================
# AI & LLM INTEGRATION (REQUIRED)
# ================================================================

# Anthropic Claude API (Primary planning engine)
ANTHROPIC_API_KEY=sk-ant-api03-xxx       # Required: Claude Opus 4 & Sonnet 4 for planning and intelligence
ANTHROPIC_MODEL_OPUS=claude-opus-4-20250514      # Strategic planning model
ANTHROPIC_MODEL_SONNET=claude-sonnet-4-20250514  # Structured processing model

# OpenAI API (Email intelligence and structured outputs)
OPENAI_API_KEY=sk-xxx                    # Required: GPT-4 for email categorization and response API
OPENAI_MODEL=gpt-4-turbo-preview         # Model for structured email processing

# ================================================================
# EMAIL INTEGRATION (MICROSOFT GRAPH API)
# ================================================================

# Microsoft Azure App Registration (for email features)
ECHO_GRAPH_CLIENT_ID=your-client-id      # Azure App Registration Client ID
ECHO_GRAPH_CLIENT_SECRET=your-secret     # Azure App Registration Client Secret  
ECHO_GRAPH_TENANT_ID=your-tenant-id     # Azure AD Tenant ID (optional, defaults to common)
ECHO_GRAPH_REDIRECT_URI=http://localhost:8000/oauth/callback  # OAuth redirect URI

# Email Processing Configuration
EMAIL_BATCH_SIZE=50                      # Number of emails to process per batch
EMAIL_LOOKBACK_HOURS=24                  # Hours to look back for email processing
EMAIL_RATE_LIMIT_PER_MINUTE=60          # Graph API rate limiting

# ================================================================
# DATA STORAGE & PATHS
# ================================================================

# Directory Structure
CONFIG_PATH=config/user_config.yaml     # Main configuration file location
DATA_DIR=data                           # Database and persistent data directory
LOG_DIR=runtime/logs                    # Application logs directory
PLAN_DIR=runtime/plans                  # Generated daily plans directory
EXPORT_DIR=runtime/exports              # Data export directory
SESSION_DIR=sessions                    # Development session tracking

# Database Configuration
DATABASE_URL=sqlite:///data/session_intelligence.db  # Main database location
CONVERSATIONS_DB=data/conversations.db               # Adaptive coaching database
QUOTES_DB=data/quotes.json                          # Contextual quotes database

# ================================================================
# SECURITY & AUTHENTICATION
# ================================================================

# Application Security
SECRET_KEY=your-secret-key-here          # Required: Session encryption key (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret              # JWT token signing secret
TOKEN_EXPIRY_HOURS=24                   # OAuth token refresh interval

# CORS Configuration (production)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com  # Comma-separated allowed origins
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS                    # Allowed HTTP methods
ALLOWED_HEADERS=*                                              # Allowed request headers

# ================================================================
# OPTIONAL INTEGRATIONS
# ================================================================

# Calendar Integration (future feature)
GOOGLE_CALENDAR_ID=your-calendar-id     # Google Calendar integration
OUTLOOK_CALENDAR_ID=your-calendar-id    # Outlook Calendar integration

# Meeting Intelligence (future feature) 
MEETING_TRANSCRIPTION_PROVIDER=whisper  # Transcription provider: whisper, deepgram, assembly
MEETING_STORAGE_DAYS=30                 # Days to retain meeting transcripts

# Analytics & Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn      # Error tracking and monitoring
DATADOG_API_KEY=your-datadog-key       # Application performance monitoring
ANALYTICS_ENABLED=true                  # Enable usage analytics collection

# ================================================================
# PERFORMANCE & CACHING
# ================================================================

# API Performance
REQUEST_TIMEOUT=30                      # API request timeout in seconds
MAX_CONCURRENT_REQUESTS=10             # Maximum concurrent API requests
RATE_LIMIT_PER_MINUTE=100             # General API rate limiting

# Caching Configuration
REDIS_URL=redis://localhost:6379      # Redis URL for caching (optional)
CACHE_TTL=3600                        # Cache time-to-live in seconds
ENABLE_CACHING=false                  # Enable response caching

# ================================================================
# DEVELOPMENT & TESTING
# ================================================================

# Development Tools
HOT_RELOAD=true                       # Enable hot reload in development
API_DOCS=true                        # Enable /docs and /redoc endpoints
MOCK_EMAIL_DATA=false                # Use mock email data for testing
MOCK_LLM_RESPONSES=false             # Use mock LLM responses for testing

# Testing Configuration
TEST_DATABASE_URL=sqlite:///data/test.db    # Test database location
TEST_API_KEY=test-key                       # Test API key for integration tests
PYTEST_TIMEOUT=30                           # Test timeout in seconds

# ================================================================
# FEATURE FLAGS
# ================================================================

# Core Features
ENABLE_EMAIL_INTEGRATION=true         # Enable Microsoft Graph email features
ENABLE_PROJECT_MANAGEMENT=true        # Enable full project CRUD operations
ENABLE_ANALYTICS=true                 # Enable analytics and time tracking
ENABLE_SESSION_INTELLIGENCE=true      # Enable session scaffolds and insights

# Advanced Features (future)
ENABLE_MEETING_INTELLIGENCE=false     # Enable meeting transcription and summarization
ENABLE_MOBILE_API=false               # Enable mobile app API endpoints
ENABLE_TEAM_COLLABORATION=false       # Enable multi-user features
ENABLE_CALENDAR_SYNC=false            # Enable two-way calendar synchronization

# Experimental Features
ENABLE_VOICE_COMMANDS=false           # Enable voice interaction
ENABLE_AUTOMATION=false               # Enable advanced automation rules
ENABLE_WEBHOOKS=false                 # Enable webhook notifications